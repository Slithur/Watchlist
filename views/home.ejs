    <title>home Page</title>

    <script>

        window.onload = function() {
        newAnime();
        };

        function newAnime(){
            const URL = "https://animechan.vercel.app/api/quotes";
            $.ajax(URL).then(function (response) {
                    console.log('Quote data is ready')
                    randomQuoteIndex = Math.floor(Math.random() * (response.length - 1));

                    let quote = response[randomQuoteIndex].quote
                    let name = response[randomQuoteIndex].anime

                    console.log(response[randomQuoteIndex].anime)
                    console.log(quote)

                    document.getElementById('quote').textContent = quote;
                    document.getElementById('name').textContent = name;
                }, function (error) {
                    console.log('something is wrong')
                    console.log(error)
                })
        }        
    </script>
</head>
<body>
  
    <p id = 'name'> </p>
    <p id ='quote'> </p>
 
</body>

</html>